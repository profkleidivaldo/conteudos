<footer>¬© 2025 Li√ß√£o+ ‚Ä¢ Plataforma Educacional Integrada</footer>

<script>
const usuario = "profkleidivaldo"; // seu usu√°rio GitHub
const repositorio = "conteudos";   // reposit√≥rio com os conte√∫dos

async function carregarConteudo() {
  const conteudoDiv = document.getElementById("conteudo");
  conteudoDiv.innerHTML = "<p style='text-align:center;'>‚è≥ Carregando estrutura...</p>";

  try {
    const anos = await listarPastas(`https://api.github.com/repos/${usuario}/${repositorio}/contents/`);
    conteudoDiv.innerHTML = ""; // limpa o "carregando"

    for (const ano of anos) {
      const anoDiv = document.createElement("div");
      anoDiv.className = "ano";
      anoDiv.innerHTML = `<h2>${formatarNome(ano.name)}</h2>`;

      const materias = await listarPastas(ano.url);
      for (const materia of materias) {
        const materiaDiv = document.createElement("div");
        materiaDiv.className = "materia";
        materiaDiv.innerHTML = `<h3>${formatarNome(materia.name)}</h3>`;

        const carrossel = document.createElement("div");
        carrossel.className = "carrossel";

        const topicos = await listarPastas(materia.url);
        for (const topico of topicos) {
          const livro = document.createElement("div");
          livro.className = "livro";

          const link = `https://${usuario}.github.io/${repositorio}/${encodeURIComponent(ano.name)}/${encodeURIComponent(materia.name)}/${encodeURIComponent(topico.name)}/index.html`;

          livro.innerHTML = `
            <a href="${link}" target="_blank">
              <img src="https://picsum.photos/200/300?random=${Math.floor(Math.random()*100)}" alt="${topico.name}">
              <h4>${formatarNome(topico.name)}</h4>
            </a>`;
          carrossel.appendChild(livro);
        }

        materiaDiv.appendChild(carrossel);
        anoDiv.appendChild(materiaDiv);
      }

      conteudoDiv.appendChild(anoDiv);
    }

  } catch (erro) {
    conteudoDiv.innerHTML = `<p style='color:red;text-align:center;'>‚ö†Ô∏è Erro ao carregar conte√∫do: ${erro.message}</p>`;
    console.error(erro);
  }
}

async function listarPastas(url) {
  const resposta = await fetch(url);
  if (!resposta.ok) throw new Error(`Erro ao buscar: ${url}`);
  const dados = await resposta.json();
  return dados.filter(item => item.type === "dir");
}

function formatarNome(nome) {
  return nome
    .replace(/([0-9]+¬∫?ano)/i, "$1")
    .replace(/_/g, " ")
    .replace(/-/g, " ")
    .replace(/\b\w/g, l => l.toUpperCase());
}

carregarConteudo();
</script>

