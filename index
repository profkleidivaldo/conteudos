<div id="conteudo"><p style="text-align:center; padding:20px;">üîÑ Carregando conte√∫do...</p></div>
<footer>¬© 2025 Li√ß√£o+ ‚Ä¢ Plataforma Educacional</footer>

<script>
const usuario = "profkleidivaldo"; // seu nome de usu√°rio GitHub
const repositorio = "conteudos";   // nome do reposit√≥rio

async function listarPastas(url) {
  try {
    const resposta = await fetch(url);
    if (!resposta.ok) throw new Error(`Erro ${resposta.status}`);
    const dados = await resposta.json();
    return dados.filter(item => item.type === "dir");
  } catch (erro) {
    console.error("Erro ao buscar pastas:", erro);
    return [];
  }
}

function formatarNome(nome) {
  return nome
    .replace(/ano/g, "¬∫ Ano")
    .replace(/_/g, " ")
    .replace(/([a-z])([A-Z])/g, "$1 $2")
    .replace(/linguaportuguesa/i, "L√≠ngua Portuguesa")
    .replace(/matematica/i, "Matem√°tica")
    .replace(/historia/i, "Hist√≥ria")
    .replace(/geografia/i, "Geografia")
    .replace(/ciencias/i, "Ci√™ncias")
    .replace(/^\w/, c => c.toUpperCase());
}

async function carregarConteudo() {
  const conteudoDiv = document.getElementById("conteudo");
  conteudoDiv.innerHTML = "<p style='text-align:center;'>üîç Buscando conte√∫do...</p>";

  const urlBase = `https://api.github.com/repos/${usuario}/${repositorio}/contents`;
  const anos = await listarPastas(urlBase);

  if (anos.length === 0) {
    conteudoDiv.innerHTML = "<p style='text-align:center;'>‚ö†Ô∏è Nenhum conte√∫do encontrado. Verifique as pastas no reposit√≥rio.</p>";
    return;
  }

  conteudoDiv.innerHTML = "";

  for (const ano of anos) {
    const anoDiv = document.createElement("div");
    anoDiv.className = "ano";
    anoDiv.innerHTML = `<h2>${formatarNome(ano.name)}</h2>`;

    const materias = await listarPastas(ano.url);

    for (const materia of materias) {
      const materiaDiv = document.createElement("div");
      materiaDiv.className = "materia";
      materiaDiv.innerHTML = `<h3>${formatarNome(materia.name)}</h3>`;

      const carrossel = document.createElement("div");
      carrossel.className = "carrossel";

      const topicos = await listarPastas(materia.url);

      for (const topico of topicos) {
        const livro = document.createElement("div");
        livro.className = "livro";
        livro.innerHTML = `
          <a href="https://${usuario}.github.io/${repositorio}/${ano.name}/${materia.name}/${topico.name}/index.html" target="_blank">
            <img src="https://picsum.photos/200/300?random=${Math.floor(Math.random()*100)}" alt="${topico.name}">
            <h4>${formatarNome(topico.name)}</h4>
          </a>`;
        carrossel.appendChild(livro);
      }

      if (topicos.length === 0) {
        carrossel.innerHTML = "<p style='color:#999; padding:10px;'>Nenhum conte√∫do dispon√≠vel.</p>";
      }

      materiaDiv.appendChild(carrossel);
      anoDiv.appendChild(materiaDiv);
    }

    conteudoDiv.appendChild(anoDiv);
  }
}

carregarConteudo();
</script>

